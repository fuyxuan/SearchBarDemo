    android:layout_margin="30dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_dialog_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 sp" />

    <Button
        android:id="@+id/btn_dialog_size_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 sp" />

    <Button
        android:id="@+id/btn_dialog_size_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 sp" />

</LinearLayout>